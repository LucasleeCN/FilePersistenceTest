<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_name"
        android:text="姓名"
        android:textSize="30dp"
        android:layout_marginVertical="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etext_name"
        android:layout_toRightOf="@+id/text_name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_number"
        android:text="学号"
        android:textSize="30dp"
        android:layout_below="@id/text_name"
        android:layout_marginVertical="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etext_number"
        android:layout_toRightOf="@+id/text_number"
        android:layout_below="@id/etext_name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_class"
        android:text="班级"
        android:textSize="30dp"
        android:layout_below="@id/text_number"
        android:layout_marginVertical="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etext_class"
        android:layout_toRightOf="@+id/text_class"
        android:layout_below="@id/etext_number"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:text="提交"
        android:textSize="30dp"
        android:layout_below="@id/text_class"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reload"
        android:text="提取"
        android:textSize="30dp"
        android:layout_below="@id/submit"

        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/getText"
        android:layout_below="@id/reload"/>

</RelativeLayout>